DROP TABLE IF EXISTS `yuechang`.`user`;
CREATE TABLE  `yuechang`.`user` (
  `id` int(10) unsigned NOT NULL,
  `name` varchar(50) NOT NULL,
  `openid` varchar(50) NOT NULL,
  `gender` char(10) NOT NULL,
  `birthday` date NOT NULL,
  `clientid` int(10) unsigned NOT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;


DROP TABLE IF EXISTS `yuechang`.`client`;
CREATE TABLE  `yuechang`.`client` (
  `id` int(10) unsigned NOT NULL AUTO_INCREMENT,
  `name` varchar(45) NOT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=2 DEFAULT CHARSET=latin1;


DROP TABLE IF EXISTS `yuechang`.`credit_history`;
CREATE TABLE  `yuechang`.`credit_history` (
  `id` int(10) unsigned NOT NULL AUTO_INCREMENT,
  `typeid` int(10) unsigned zerofill NOT NULL,
  `expiration` datetime NOT NULL,
  `amount` int(10) unsigned zerofill NOT NULL,
  `userid` int(10) unsigned zerofill NOT NULL,
  `client` int(10) unsigned zerofill NOT NULL,
  `updated` datetime NOT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;


DROP TABLE IF EXISTS `yuechang`.`product`;
CREATE TABLE  `yuechang`.`product` (
  `id` int(10) unsigned NOT NULL AUTO_INCREMENT,
  `category_id` int(10) unsigned zerofill NOT NULL,
  `name` varchar(45) NOT NULL,
  `description` varchar(400) NOT NULL,
  `img` varchar(45) NOT NULL,
  `price` float unsigned zerofill NOT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;